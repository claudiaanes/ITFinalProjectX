@model ITFinalProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br />
            <span class="bg-grey title">
                <i class="fa fa-user-plus fa-lg"></i> REGISTO
            </span>
        </div>
    </div>
</div>

<div class="bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="padding-20">Registe-se como utilizador para ter acesso aos conteúdos</div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-5 col-lg-4">
            <section id="loginForm">
                <h4 class="text-blue">
                    Introduza os seus dados
                </h4><br />
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Utilizador" })
                        <i class="fa fa-info-circle fa-lg input-icon-info text-green"></i>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        <i class="fa fa-info-circle fa-lg input-icon-info text-green"></i>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Conf. Password" })
                        <i class="fa fa-info-circle fa-lg input-icon-info text-green"></i>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <input type="submit" value="REGISTAR" class="form-control btn btn-success" />
                    </div>
                }
            </section>
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
